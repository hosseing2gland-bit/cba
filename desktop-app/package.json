{
  "name": "antidetect-desktop",
  "version": "1.0.0",
  "main": "main/main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "build:renderer": "cd renderer && vite build",
    "test:renderer": "cd renderer && vitest run",
    "test:playwright": "cd renderer && pnpm --package=@playwright/test dlx playwright test",
    "lint": "eslint main renderer/src"
  },
  "dependencies": {
    "electron": "^28.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-redux": "^9.2.0",
    "@reduxjs/toolkit": "^2.2.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.43.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@vitejs/plugin-react": "^4.2.0",
    "eslint": "^9.2.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "vite": "^5.1.0",
    "vitest": "^1.4.0"
  },
  "build": {
    "appId": "com.antidetect.manager",
    "files": ["dist/**/*", "main/**/*", "renderer/dist/**/*", "package.json"],
    "mac": {
      "target": "dmg",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist"
    },
    "win": {
      "target": "nsis",
      "signingHashAlgorithms": ["sha256"],
      "publisherName": "ACME Corp"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Network"
    },
    "directories": {
      "output": "dist"
    },
    "extraResources": [
      {
        "from": "config.json",
        "to": "config.json",
        "filter": ["config.json"]
      }
    ]
  }
}
